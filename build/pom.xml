<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.albertsons.itds</groupId>
        <artifactId>itds-price-tls</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>build</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>
    <dependencies>
        <dependency>
            <groupId>com.albertsons.itds</groupId>
            <artifactId>releases</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds</groupId>
            <artifactId>config</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds</groupId>
            <artifactId>hive-udfs</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds</groupId>
            <artifactId>pig-udfs</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <!--<dependency>
        	<groupId>com.albertsons.itds</groupId>
        	<artifactId>itds-price-tls-flow</artifactId>
        	<version>1.0.0-SNAPSHOT</version>
        	<type>zip</type>
        </dependency> -->
        <dependency>
            <groupId>com.albertsons.itds</groupId>
            <artifactId>setup</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds</groupId>
            <artifactId>pexec-extr</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds</groupId>
            <artifactId>pexec-cptohd</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds</groupId>
            <artifactId>pexec-xlsgen</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds</groupId>
            <artifactId>pexec-cptolcl</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds</groupId>
            <artifactId>pexec-cptoshpt</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>com.albertsons.itds</groupId>
            <artifactId>cleanup</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>tar.gz</type>
        </dependency>
    </dependencies>
    <build>
        <finalName>${itds.project.name}-${mvn.project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/itds-price-tls
                            </outputDirectory>
                            <includeArtifactIds>itds-price-tls-flow</includeArtifactIds>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeTypes>tar.gz</includeTypes>
                            <excludeArtifactIds>itds-price-tls-flow,shell-functions</excludeArtifactIds>
                            <outputDirectory>${project.build.directory}/itds-price-tls</outputDirectory>
                            <stripVersion>true</stripVersion>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>itds-price-tls-tar-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>
                                    ${multi.module.project.root.dir}/libraries/common/src/main/resources/assemblies/itds-price-tls-tar-assembly.xml
                                </descriptor>
                            </descriptors>
                            <tarLongFileMode>posix</tarLongFileMode>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
